{
  "name": "erlang-formatter",
  "publisher": "szTheory",
  "displayName": "Erlang Formatter",
  "description": "Erlang code formatter",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.41.0"
  },
  "galleryBanner": {
    "color": "#FFFFFF"
  },
  "license": "SEE LICENSE IN LICENSE file",
  "repository": {
    "type": "git",
    "url": "https://github.com/szTheory/vsc-erlang-formatter"
  },
  "icon": "images/erlang.png",
  "bugs": {
    "url": "https://github.com/szTheory/vsc-erlang-formatter/issues"
  },
  "homepage": "https://github.com/szTheory/vsc-erlang-formatter",
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "erlang",
        "aliases": [
          "Erlang",
          "erlang"
        ],
        "extensions": [
          ".erl",
          ".escript"
        ]
      }
    ],
    "configuration": {
      "title": "Erlang Formatter",
      "properties": {
        "erlangFormatter.formatter": {
          "description": "Formatter to use",
          "type": "string",
          "enum": [
            "rebar3_format",
            "steamroller",
            "erlfmt"
          ],
          "default": "rebar3_format"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "glob": "^7.1.5",
    "mocha": "^10.2.0",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
